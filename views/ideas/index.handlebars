

{{#each ideas}}


<div class="card text-center  "  style="width: 38rem;" >
  <div class="card-header  bg-dark">
    <h3 class="text-white">{{title}}</h3>
  </div>
  <div class="card-body  text-danger">
    <h5 class="card-title">{{details}}</h5> 
    <button class="btn btn-dark float-left"><a href="/ideas/edit/{{id}}"><kbd>Update</kbd></a></button>

    <form action="/ideas/delete/{{id}}" method="post">
    <button type="submit" class="btn btn-dark float-right"><kbd>Delete</kbd></button>
    </form>
  </div>
  </div><br><br><br><br><br>

{{else}}
    <p>No Ideas Added</p>
{{/each}}